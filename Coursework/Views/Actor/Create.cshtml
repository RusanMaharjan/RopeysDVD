@model Coursework.Models.Actor

@{
    ViewBag.Title = "Add Actor";
    Layout = "_Layout";
}

<h2 class="mt-4 text-center">Add Actor</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-uppercase">Create</h3>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
        </div>
    </div>

    <hr/>
    <form method="post" class="mt-3 ">
        <label asp-for="ActorFirstName" class="form-label fs-5"></label>
        <input type="text" asp-for="ActorFirstName" class="form-control mt-1" placeholder="Actor First Name">
        <span asp-validation-for="ActorFirstName" class="text-danger form-label"></span>
        <br>
        <label asp-for="ActorSurname" class="form-label fs-5"></label>
        <input type="text" asp-for="ActorSurname" placeholder="Actor Last Name" class="form-control mt-1">
        <span asp-validation-for="ActorSurname" class="text-danger"></span>
        <div class="text-center">
            <button type="submit" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;">Submit</button>
        </div>

    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}