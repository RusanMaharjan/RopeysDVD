@model Coursework.Models.Actor

@{
    ViewBag.Title = "Edit Actor";
    Layout = "_Layout";
}

<h2 class="text-center">Edit Actor</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
    
    <div class="row">
            <div class="col-md-6">
                <h3 class="text-uppercase">Edit</h3>
            </div>
            <div class="col-md-6 text-end">
                <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
            </div>
        </div>
    
    <hr/>
    
    <form method="post">
        <input type="hidden" asp-for="ActorNumber">
        <label asp-for="ActorFirstName" class="form-label fs-5"></label>
        <input type="text" asp-for="ActorFirstName" class="form-control mt-1" placeholder="Actor First Name">
        <span asp-validation-for="ActorFirstName" class="text-danger"></span>
        <label asp-for="ActorSurname" class="form-label mt-4 fs-5"></label>
        <input type="text" asp-for="ActorSurname" placeholder="Actor Last Name" class="form-control mt-1">
        <span asp-validation-for="ActorSurname" class="text-danger"></span>
        <div class="text-center">

            <button type="submit" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;">Update</button>
        </div>
    </form>

</div>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}