@model Coursework.Models.CastMember

@{
    ViewData["Title"] = "Create";
}

<h2 class="mt-4 text-center">Cast Member</h2>

<div class="w-50 row m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
         <div class="row">
             <div class="col-md-6">
                 <h3 class="text-uppercase">Create</h3>
             </div>
             <div class="col-md-6 text-end">
                 <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
             </div>
         </div>
     
    <hr/>
    
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DVDNumber" class="control-label"></label>
                <select asp-for="DVDNumber" class ="form-control" asp-items="ViewBag.DVDNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="ActorNumber" class="control-label"></label>
                <select asp-for="ActorNumber" class ="form-control" asp-items="ViewBag.ActorNumber"></select>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;"/>
            </div>
        </form>
    </div>
</div>


