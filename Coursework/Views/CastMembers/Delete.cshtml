@model Coursework.Models.CastMember?

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CastMember</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DvdTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DvdTitle.DateReleased)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.ActorFirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-action="Index">Back to List</a>
    </form>
</div>