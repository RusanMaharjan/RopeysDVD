@model Coursework.Models.CastMember?

@{
    ViewBag.Title = "Edit Cast Member";
    Layout = "_Layout";
}
<h2 class="text-center">Edit Cast Member</h2>
<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
         
         <div class="row">
                 <div class="col-md-6">
                     <h3 class="text-uppercase">Edit</h3>
                 </div>
                 <div class="col-md-6 text-end">
                     <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
                 </div>
             </div>
         
    <hr/>
    
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="DVDNumber" class="control-label"></label>
            <select asp-for="DVDNumber" class="form-control" asp-items="ViewBag.DVDNumber"></select>
            <span asp-validation-for="DVDNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ActorNumber" class="control-label"></label>
            <select asp-for="ActorNumber" class="form-control" asp-items="ViewBag.ActorNumber"></select>
            <span asp-validation-for="ActorNumber" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Update" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;" />
        </div>
    </form>
    
</div>
