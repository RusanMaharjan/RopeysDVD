@model Coursework.Models.DVDCategory

@{
    ViewBag.Title = "Delete DVD Category";
    Layout = "_Layout";
}

<h2 class="text-center">Delete Category</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
         
         <div class="row">
                     <div class="col-md-6">
                         <h3 class="text-uppercase">Delete</h3>
                     </div>
                     <div class="col-md-6 text-end">
                         <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
                     </div>
                 </div>
             
    <hr/>
    
    <form action="" method="post">
        
        <input type="hidden" class="form-control fs-4" asp-for="CategoryNumber">
        
        <label asp-for="CategoryDescription" class="form-label fs-5"></label>
        <input type="text" class="form-control fs-4" asp-for="CategoryDescription">
        <br/>
        <label asp-for="AgeRestricted" class="form-label fs-5"></label>
        <input type="text" class="form-control fs-4" asp-for="AgeRestricted">

        <div class="text-center">
            <button type="submit" class="mt-4 btn btn-danger w-75 fs-5" style="border-radius: 10px;">Delete Category</button>
        </div>

    </form>
</div>

