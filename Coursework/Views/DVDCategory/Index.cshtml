@model System.Collections.Generic.IEnumerable<Coursework.Models.DVDCategory>

@{
    ViewBag.Title = "All DVD Category";
    Layout = "_Layout";
}

<h2>All DVD Category</h2>
<table class="table table-bordered table-striped w-100">
    <thead>
    <tr>
        <th>Category Description</th>
        <th>Age Restriction</th>
        <th>Action</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryDescription</td>
            <td>@item.AgeRestricted</td>
            <td role="group" class="text-center">
                <a class="btn btn-warning mx-3" asp-controller="DVDCategory" asp-action="Edit" asp-route-id="@item.CategoryNumber"><i class="bi bi-pencil-square fs-3"></i></a>
                <a class="btn btn-danger" asp-controller="DVDCategory" asp-action="Delete" asp-route-id="@item.CategoryNumber"><i class="bi bi-trash fs-3"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
