@model IEnumerable<Coursework.Models.DVDCopy>

@{
    ViewData["Title"] = "Index";
}
<div class="row mt-4">
    <div class="col-md-6"><h2>DVD Copies</h2></div>
    <div class="col-md-6 text-end"><a type="button" asp-controller="DVDCopies" asp-action="Create" class="btn btn-outline-light btn btn-lig">Create DVD Copies <i class="bi bi-plus-circle"></i></a></div>
</div>

<table class="table text-center table-bordered table-striped w-100 mb-5">
    <thead class="bg-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DvdTitle.TitleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePurchased)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DvdTitle.TitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePurchased)
            </td>
            <td>
                <a class="btn btn-info text-decoration-underline mx-3" asp-action="Edit" asp-route-id="@item.CopyNumber">Edit &rarr;</a> 
                <a class="btn btn-danger text-decoration-underline" asp-action="Delete" asp-route-id="@item.CopyNumber">Delete &rarr;</a>
            </td>
        </tr>
}
    </tbody>
</table>
