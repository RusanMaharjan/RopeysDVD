@model IEnumerable<Coursework.Models.DVDCopy>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DvdTitle.TitleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePurchased)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DvdTitle.TitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePurchased)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CopyNumber">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.CopyNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
