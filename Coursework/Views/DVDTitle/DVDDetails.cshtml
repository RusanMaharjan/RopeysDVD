@model System.Collections.Generic.List<Coursework.Models.DVDTitle>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row mt-4">
    <div class="col-md-6"><h2>DVD Details</h2></div>
    <div class="col-md-6 text-end"><a type="button" asp-controller="DVDTitle" asp-action="CreateDVD" class="btn btn-outline-light btn btn-lig">Create DVD <i class="bi bi-plus-circle"></i></a></div>
</div>

<table class="table text-center table-bordered table-striped w-100 mb-5">
    <thead class="bg-secondary">
    <tr>
        <th>Dvd Title</th>
        <th>Studio Name</th>
        <th>Producer Name</th>
        <th>Cast Members</th>
        <th>Release Date</th>
        <th>Action</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TitleName</td>
            <td>@item.Studio.StudioName</td>
            <td>@item.Producer.ProducerName</td>
            <td>@item.actors</td>
            <td>@item.DateReleased</td>
            <td role="group" class="text-center">
                <a class="btn btn-info text-decoration-underline mx-3" asp-controller="DVDTitle" asp-action="Edit" asp-route-id="@item.DVDNumber">Edit &rarr;</a>
                <a class="btn btn-danger text-decoration-underline" asp-controller="DVDTitle" asp-action="Delete" asp-route-id="@item.DVDNumber">Delete &rarr;</a>
            </td>
        </tr>
    }
    </tbody>
</table>