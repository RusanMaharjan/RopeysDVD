@model System.Collections.Generic.IEnumerable<Coursework.Models.DVDTitle>

@{
    ViewBag.Title = "All DVDs";
    Layout = "_Layout";
}

<h2>All DVD</h2>
<table class="table table-bordered table-striped w-100">
    <thead>
    <tr>
        <th>Dvd Title</th>
        <th>Date Released</th>
        <th>Category</th>
        <th>Producer</th>
        <th>Action</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TitleName</td>
            <td>@item.DateReleased</td>
            <td>@item.CategoryNumber</td>
            <td>@item.ProducerNumber</td>
