            @*     <a class="btn btn-warning mx-3" asp-controller="Actor" asp-action="Edit" asp-route-id="@item.ActorNumber"><i class="bi bi-pencil-square fs-3"></i></a> *@
            @*     <a class="btn btn-danger" asp-controller="Actor" asp-action="Delete" asp-route-id="@item.ActorNumber"><i class="bi bi-trash fs-3"></i></a> *@
            @* </td> *@
        </tr>
    }
    </tbody>
</table>