@model Coursework.Models.Loan

@{
    ViewData["Title"] = "Create";
}

<h2 class="mt-4 text-center">Add Loan</h2>

<div class="row w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
         <div class="row">
             <div class="col-md-6">
                 <h3 class="text-uppercase">Create</h3>
             </div>
             <div class="col-md-6 text-end">
                 <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
             </div>
         </div>
     
    <hr/>
    
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Html.ViewData.ModelState["success"] != null)
            {
                @Html.ViewData.ModelState["success"].Errors[0].ErrorMessage;
            }
            <div class="form-group">
                <label asp-for="LoanTypeNumber" class="control-label"></label>
                <select asp-for="LoanTypeNumber" class ="form-control" asp-items="ViewBag.LoanTypeNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="CopyNumber" class="control-label"></label>
                <select asp-for="CopyNumber" class ="form-control" asp-items="ViewBag.CopyNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="MemberNumber" class="control-label"></label>
                <select asp-for="MemberNumber" class ="form-control" asp-items="ViewBag.MemberNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateOut" class="control-label"></label>
                <input asp-for="DateOut" class="form-control" />
                <span asp-validation-for="DateOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDue" class="control-label"></label>
                <input asp-for="DateDue" class="form-control" />
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReturned" class="control-label"></label>
                <input type="text" asp-for="DateReturned" class="form-control" />
                <span asp-validation-for="DateReturned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;"/>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
