@model Coursework.Models.LoanType

@{
    ViewBag.Title = "Create Loan";
    Layout = "_Layout";
}

<h2 class="mt-4 text-center">Create Loan</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
         <div class="row">
             <div class="col-md-6">
                 <h3 class="text-uppercase">Create</h3>
             </div>
             <div class="col-md-6 text-end">
                 <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
             </div>
         </div>
     
    <hr/>
    
    <form action="" method="post">
        <label asp-for="Loan_Type" class="form-label fs-5"></label>
        <input type="text" asp-for="Loan_Type" class="form-control" id="" placeholder="loan type">
        <span asp-validation-for="Loan_Type" class="text-danger"></span>
        <br/>
        <label asp-for="LoanDuration" class="form-label fs-5"></label>
        <input type="text" asp-for="LoanDuration" class="form-control" id="" placeholder="loan duration">
        <span asp-validation-for="LoanDuration" class="text-danger"></span>
        
        <div class="text-center">
            <button type="submit" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;">Add Loan Type</button>
        </div>
        
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
