@model Producer

@{
    ViewBag.Title = "Create Producer";
    Layout = "_Layout";
}

<h2 class="mt-4 text-center">Add Producer</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-uppercase">Create</h3>
            </div>
            <div class="col-md-6 text-end">
                <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
            </div>
        </div>
    
    <hr/>
    
    <form action="" method="post">
        <label asp-for="ProducerName"></label>
        <input type="text" asp-for="ProducerName" class="form-control mt-1" placeholder="Producer Name">
        <span asp-validation-for="ProducerName" class="text-danger"></span>
        <div class="text-center">
            <button type="submit" class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;">Add Producer</button>
        </div>
        
    </form>
</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
