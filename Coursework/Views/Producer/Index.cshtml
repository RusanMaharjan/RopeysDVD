@model System.Collections.Generic.IEnumerable<Coursework.Models.Producer>

@{
    ViewBag.Title = "All Producers";
    Layout = "_Layout";
}

<h2>All Producer</h2>

<table class="table table-bordered table-striped w-100">
    <thead>
    <tr>
        <th>Producer Name</th>
        <th>Action</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProducerName</td>
            <td role="group" class="text-center">
                <a class="btn btn-warning mx-3" asp-controller="Producer" asp-action="Edit" asp-route-id="@item.ProducerNumber"><i class="bi bi-pencil-square fs-3"></i></a>
                <a class="btn btn-danger" asp-controller="Producer" asp-action="Delete" asp-route-id="@item.ProducerNumber"><i class="bi bi-trash fs-3"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
