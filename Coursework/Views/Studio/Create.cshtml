@model Coursework.Models.Studio

@{
    ViewBag.Title = "Add Studio";
    Layout = "_Layout";
}

<h2 class="mt-4 text-center">Add Studio</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
    <div class="row">
            <div class="col-md-6">
                <h3 class="text-uppercase">Create</h3>
            </div>
            <div class="col-md-6 text-end">
                <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
            </div>
        </div>
    
    <hr/>
    
    <form action="" method="post">
        <label asp-for="StudioName" class="form-label"></label>
        <input type="text" asp-for="StudioName" class="form-control mt-1" placeholder="Studio Name">
        <span asp-validation-for="StudioName" class="text-danger"></span>
        
        <div class="text-center">
           <button class="mt-4 btn btn-success w-75 fs-5" style="border-radius: 10px;" type="submit">Add</button> 
        </div>
        
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
