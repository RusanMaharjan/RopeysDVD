@model Coursework.Models.Studio

@{
    ViewBag.Title = "Delete Studio";
    Layout = "_Layout";
}

<h2 class="text-center">Delete Studio</h2>

<div class="w-50 m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
         
         <div class="row">
                     <div class="col-md-6">
                         <h3 class="text-uppercase">Delete</h3>
                     </div>
                     <div class="col-md-6 text-end">
                         <a class="btn btn-info" asp-action="Index">Back To List &rarr;</a>
                     </div>
                 </div>
             
    <hr/>
    
  <form action="" method="post">
      <input type="hidden" class="form-control fs-4" asp-for="StudioNumber">
      
      <label asp-for="StudioName" class="form-label fs-5"></label>
      <input type="text" class="form-control fs-4 mt-2" asp-for="StudioName" readonly>
      <span asp-validation-for="StudioName" class="text-danger"></span>
      <div class="text-center">
          <button type="submit" class="mt-4 btn btn-danger w-75 fs-5" style="border-radius: 10px;">Delete</button>
      </div>
      
  </form>  
</div>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}